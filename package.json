{
  "name": "node-express-ts",
  "version": "1.0.0",
  "description": "ndoe js, express, and typescript biolerplate",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:start": "npx nodemon ./src/index.ts",
    "copy-views": "rm -r './dist/views' && cp -r './src/views' './dist/views'",
    "copy-public": "rm -r './dist/public' && cp -r './src/public' './dist/public'",
    "build": "tsc && npm run copy-public && npm run copy-views"
  },
  "repository": {
    "type": "git",
    "url": "node-express-ts"
  },
  "keywords": [
    "node js",
    "express",
    "typescript",
    "mysql"
  ],
  "author": "Phillip Rekhotho",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/mysql": "^2.15.26",
    "nodemon": "^3.1.3",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "express": "^4.19.2",
    "mysql": "^2.18.1"
  }
}
